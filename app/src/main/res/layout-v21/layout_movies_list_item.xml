<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_margin_8_dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_movie_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_grid_item_image_height"
        android:layout_gravity="center"
        android:elevation="@dimen/dimen_list_image_elevation"
        android:scaleType="centerCrop"
        tools:src="@mipmap/avatar"
        android:contentDescription="@string/info_movie_item_image" />

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="30"
        android:maxLines="2"
        android:padding="@dimen/dimen_root_padding"
        android:textAllCaps="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorTextWhite"
        android:textStyle="italic"
        tools:text="Movie Name"/>

</LinearLayout>